
services:
  # Nginx Web Server
  nginx:
    image: nginx:alpine
    container_name: unispa-nginx
    restart: unless-stopped
    ports:
      - "8080:80"
    volumes:
      - .:/var/www/html
      - ./docker/nginx/default.conf:/etc/nginx/conf.d/default.conf
    depends_on:
      - php
    networks:
      - unispa-network

  # PHP-FPM with Laravel
  php:
    image: webdevops/php-apache:8.2-alpine
    container_name: unispa-php
    restart: unless-stopped
    working_dir: /app
    volumes:
      - .:/app
    environment:
      - WEB_DOCUMENT_ROOT=/app/public
      - PHP_DATE_TIMEZONE=Asia/Kuala_Lumpur
      - PHP_DISPLAY_ERRORS=1
      - DB_CONNECTION=mysql
      - DB_HOST=mysql
      - DB_PORT=3306
      - DB_DATABASE=unispa
      - DB_USERNAME=sail
      - DB_PASSWORD=password
    depends_on:
      - mysql
    networks:
      - unispa-network
    command: >
      sh -c "composer install --no-interaction --optimize-autoloader
      && php artisan key:generate
      && php artisan storage:link
      && php artisan migrate --force
      && php-fpm"

  # MySQL Database
  mysql:
    image: mysql:8.4
    container_name: unispa-mysql
    restart: unless-stopped
    ports:
      - "3306:3306"
    environment:
      MYSQL_ROOT_PASSWORD: password
      MYSQL_DATABASE: unispa
      MYSQL_USER: sail
      MYSQL_PASSWORD: password
    volumes:
      - mysql_data:/var/lib/mysql
    networks:
      - unispa-network
    healthcheck:
      test: ["CMD", "mysqladmin", "ping", "-ppassword"]
      interval: 10s
      timeout: 5s
      retries: 3

networks:
  unispa-network:
    driver: bridge

volumes:
  mysql_data: