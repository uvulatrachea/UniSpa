FROM php:8.4

# System deps
RUN apt-get update -y && apt-get install -y \
    openssl \
    zip \
    unzip \
    git \
    curl \
    wget \
    nodejs \
    npm \
    libpq-dev \
    libpng-dev \
    libjpeg-dev \
    libfreetype6-dev \
    libonig-dev \
    libxml2-dev \
    libzip-dev \
 && rm -rf /var/lib/apt/lists/*

# Composer
RUN curl -sS https://getcomposer.org/installer | php -- \
    --install-dir=/usr/local/bin --filename=composer

# PHP extensions (this is the IMPORTANT part)
RUN docker-php-ext-configure gd --with-freetype --with-jpeg \
 && docker-php-ext-install \
    pdo \
    pdo_pgsql \
    pgsql \
    mbstring \
    zip \
    exif \
    pcntl \
    gd \
    bcmath

WORKDIR /var/www/html

# Copy composer files first (better caching)
COPY composer.json composer.lock ./
RUN composer install --no-interaction --prefer-dist --optimize-autoloader --no-scripts

# Copy package files first (better caching)
COPY package*.json ./
RUN npm install

# Copy application code (excluding .env file)
COPY --exclude=.env . .

# Set environment variables directly
ENV APP_NAME="UniSpa"
ENV APP_ENV="production"
ENV APP_KEY="base64:SpsmHf30i1vNR+tlf2/VSAnqHMoNqxeK8C8ZEbJps0Y="
ENV APP_DEBUG="false"
ENV APP_URL="https://unispa.onrender.com"
ENV DB_CONNECTION="pgsql"
ENV DB_HOST="dpg-d67eol95pdvs73ectep0-a"
ENV DB_PORT="5432"
ENV DB_DATABASE="unispa_db"
ENV DB_USERNAME="unispa_db_user"
ENV DB_PASSWORD="NylmDujDYUkgjU3jqh3tVmZuaNNCWJNM"
ENV DB_SSLMODE="require"
ENV SESSION_SECURE_COOKIE="true"
ENV SESSION_DRIVER="file"
ENV SESSION_LIFETIME="120"
ENV SESSION_DOMAIN=""
ENV SESSION_SAME_SITE="lax"
ENV SESSION_PATH="/"
ENV SESSION_HTTP_ONLY="true"
ENV SESSION_ENCRYPT="false"
ENV SESSION_EXPIRE_ON_CLOSE="false"

# Permissions for Laravel
RUN chown -R www-data:www-data /var/www/html/storage /var/www/html/bootstrap/cache \
 && chmod -R 775 /var/www/html/storage /var/www/html/bootstrap/cache

# Build frontend assets
RUN npm run build

# Run Laravel on port 80 INSIDE container (so nginx can proxy to it)
CMD ["sh", "-c", "php artisan migrate --force && php artisan db:seed --class=UniSpaSeeder --force && php artisan serve --host=0.0.0.0 --port=80"]

EXPOSE 80