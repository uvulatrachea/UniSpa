FROM php:8.4

# System deps
RUN apt-get update -y && apt-get install -y \
    openssl \
    zip \
    unzip \
    git \
    curl \
    wget \
    nodejs \
    npm \
    libpq-dev \
    libpng-dev \
    libjpeg-dev \
    libfreetype6-dev \
    libonig-dev \
    libxml2-dev \
    libzip-dev \
 && rm -rf /var/lib/apt/lists/*

# Composer
RUN curl -sS https://getcomposer.org/installer | php -- \
    --install-dir=/usr/local/bin --filename=composer

# PHP extensions (this is the IMPORTANT part)
RUN docker-php-ext-configure gd --with-freetype --with-jpeg \
 && docker-php-ext-install \
    pdo \
    pdo_pgsql \
    pgsql \
    mbstring \
    zip \
    exif \
    pcntl \
    gd \
    bcmath

WORKDIR /var/www/html

# Copy composer files first (better caching)
COPY composer.json composer.lock ./
RUN composer install --no-interaction --prefer-dist --optimize-autoloader --no-scripts

# Copy package files first (better caching)
COPY package*.json ./
RUN npm install

# Copy application code (excluding .env file)
COPY --exclude=.env . .

# Create a minimal .env file with production settings
RUN echo "APP_NAME=UniSpa" > .env && \
    echo "APP_ENV=production" >> .env && \
    echo "APP_KEY=" >> .env && \
    echo "APP_DEBUG=false" >> .env && \
    echo "APP_URL=https://unispa.onrender.com" >> .env && \
    echo "DB_CONNECTION=pgsql" >> .env && \
    echo "DB_HOST=dpg-d67eol95pdvs73ectep0-a" >> .env && \
    echo "DB_PORT=5432" >> .env && \
    echo "DB_DATABASE=unispa_db" >> .env && \
    echo "DB_USERNAME=unispa_db_user" >> .env && \
    echo "DB_PASSWORD=NylmDujDYUkgjU3jqh3tVmZuaNNCWJNM" >> .env && \
    echo "DB_SSLMODE=require" >> .env

# Permissions for Laravel
RUN chown -R www-data:www-data /var/www/html/storage /var/www/html/bootstrap/cache \
 && chmod -R 775 /var/www/html/storage /var/www/html/bootstrap/cache

# Build frontend assets
RUN npm run build

# Run Laravel on port 80 INSIDE container (so nginx can proxy to it)
CMD ["sh", "-c", "php artisan migrate --force && php artisan db:seed --class=UniSpaSeeder --force && php artisan serve --host=0.0.0.0 --port=80"]

EXPOSE 80